{% trans_default_domain 'message' %}
{% extends admin_template_layout() %}

{% block title %}{{ contact.title }}{% endblock %}

{% block body %}
{{ form_start(edit_form, {'attr':{'class':'row uniform gtr-uniform'}}) }}


<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.contact.title'|trans() }}*</label>
</div>
<div class="9u$ 12u$(xsmall) col-9 col-12-small">
	{{ contact.title }}
	{{ form_widget(edit_form.title) }}
</div>

<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.contact.name'|trans() }}*</label>
</div>
<div class="9u$ 12u$(xsmall) col-9 col-12-small">
	{{ contact.name }}
	{{ form_widget(edit_form.name) }}
</div>


<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.contact.email'|trans() }}*</label>
</div>
<div class="9u$ 12u$(xsmall) col-9 col-12-small">
	<a href="mailto:{{ contact.email }}" target="_blank">{{ contact.email }}</a>
	{{ form_widget(edit_form.email) }}
</div>

<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.contact.zip'|trans() }}*</label>
</div>
<div class="9u$ 12u$(xsmall) col-9 col-12-small">
	{{ contact.zip }}
	{{ form_widget(edit_form.zip) }}
</div>

<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.contact.address'|trans() }}*</label>
</div>
<div class="9u$ 12u$(xsmall) col-9 col-12-small">
	{{ contact.address }}
	{{ form_widget(edit_form.address) }}
</div>

<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.contact.tel'|trans() }}*</label>
</div>
<div class="9u$ 12u$(xsmall) col-9 col-12-small">
	{{ contact.tel }}
	{{ form_widget(edit_form.tel) }}
</div>

<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.contact.body'|trans() }}*</label>
</div>
<div class="9u$ 12u$(xsmall) col-9 col-12-small">
	{{ contact.body }}
	{{ form_widget(edit_form.body) }}
</div>


<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.contact.createdAt'|trans() }}*</label>
</div>
<div class="9u$ 12u$(xsmall) col-9 col-12-small">
	{{ contact.createdAt|date('Y-m-d H:i:s') }}
</div>


{{ form_end(edit_form) }}

<hr />

{{ form_start(delete_form, {'attr':{'class':'row uniform gtr-uniform'}}) }}
<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.user.current_password'|trans() }}*</label>
</div>
<div class="9u$ 12u$(xsmall) col-9 col-12-small">
	{{ form_widget(delete_form.password.current_password) }}
	{{ form_errors(delete_form.password.current_password) }}
</div>

<div class="3u 12u$(xsmall) col-3 col-12-small"></div>
<div class="9u$ 12u$(xsmall) col-9 col-12-small">
	<input type="submit" class="button special primary" value="{{ 'page.button.delete'|trans }}" id="delete-button" />
</div>
{{ form_end(delete_form) }}

{% endblock %}
