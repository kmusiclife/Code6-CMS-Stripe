{% trans_default_domain 'message' %}
{% extends admin_template_layout() %}

{% block title %}{{ 'setting.title.config.super'|trans }}{% endblock title %}
{% block body %}
<p>サイトの初期設定を行います。管理者のユーザ名、パスワードなど必要項目を入力してください。</p>

{{ 
	form_start(
		form, {
			'method': 'post', 
			'attr': {
				'class': 'site_config row uniform gtr-uniform', 
				'novalidate': 'novalidate'
		}
	}) 
}}
{# 'attr': {'novalidate': 'novalidate'} #}


<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.user.username'|trans() }}*</label>
</div>
<div class="9u$ 12u$(xsmall) col-9 col-12-small">
	{{ form_widget(form.username, {'attr': { 'placeholder':'例) example' }}) }}
	{{ form_errors(form.username) }}
</div>


<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.user.email'|trans() }}*</label>
</div>
<div class="9u$ 12u$(xsmall) col-9 col-12-small">
	{{ form_widget(form.email, {'attr': { 'placeholder':'例) info@example.com' }}) }}
	{{ form_errors(form.email) }}
</div>


<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.user.password'|trans() }}*</label>
</div>
<div class="9u$ 12u$(xsmall) col-9 col-12-small">
	{{ form_widget(form.plainPassword.first) }}
	{{ form_errors(form.plainPassword.first) }}
</div>


<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.user.password_confirm'|trans() }}*</label>
</div>
<div class="9u$ 12u$(xsmall) col-9 col-12-small">
	{{ form_widget(form.plainPassword.second) }}
	{{ form_errors(form.plainPassword.second) }}
</div>




<div class="3u 12u$(xsmall) col-3 col-12-small"></div>
<div class="9u$ 12u$(xsmall) col-9 col-12-small">
	<input type="submit" class="special" value="{{ 'register.button.submit'|trans }}" id="submit-button" />
</div>





{{ form_end(form) }}

{% endblock %}
