</div>



<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.user.password'|trans }}*</label>
</div>
<div class="9u$ 12u$(xsmall)">
	{{ form_widget(form.plainPassword.first, {'attr': { 'placeholder':'' }}) }}
	{{ form_errors(form.plainPassword.first) }}
</div>


<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.user.password_confirm'|trans }}*</label>
</div>
<div class="9u$ 12u$(xsmall)">
	{{ form_widget(form.plainPassword.second, {'attr': { 'placeholder':'' }}) }}
	{{ form_errors(form.plainPassword.second) }}
</div>


<div class="3u 12u$(xsmall) col-3 col-12-small"></div>
<div class="9u$ 12u$(xsmall)">
	<input type="submit" value="{{ 'form.button.edit'|trans }}" class="special">
</div>


{{ form_end(form) }}

{% endblock fos_user_content %}

