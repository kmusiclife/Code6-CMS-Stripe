{% trans_default_domain 'message' %}
{% extends admin_template_layout() %}

{% block title %}{{ 'profile.title.edit'|trans }}{% endblock %}

{% block fos_user_content %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit row uniform', 'novalidate': 'novalidate' } }) }}


<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.user.username'|trans }}*</label>
</div>
<div class="9u$ 12u$(xsmall)">
	{{ form_widget(form.username, {'attr': { 'placeholder':'例) example' }}) }}
	{{ form_errors(form.username) }}
</div>


<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.user.email'|trans }}*</label>
</div>
<div class="9u$ 12u$(xsmall)">
	{{ form_widget(form.email, {'attr': { 'placeholder':'例) info@example.com' }}) }}
	{{ form_errors(form.email) }}
</div>

<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.user.fname'|trans() }}*</label>
</div>
<div class="9u$ 12u$(xsmall)">
	{{ form_widget(form.fname, {'attr': { 'placeholder':'例) 山田' }}) }}
	{{ form_errors(form.fname) }}
</div>

<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.user.lname'|trans() }}*</label>
</div>
<div class="9u$ 12u$(xsmall)">
	{{ form_widget(form.lname, {'attr': { 'placeholder':'例) 華子' }}) }}
	{{ form_errors(form.lname) }}
</div>


<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.user.zip'|trans }}*</label>
</div>
<div class="9u$ 12u$(xsmall)">
	{{ form_widget(form.zip, {'attr': { 'placeholder':'例) 123-0000' }}) }}
	{{ form_errors(form.zip) }}
</div>

<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.user.address'|trans }}*</label>
</div>
<div class="9u$ 12u$(xsmall)">
	{{ form_widget(form.address, {'attr': { 'placeholder':'例) 東京都港区1-1' }}) }}
	{{ form_errors(form.address) }}
</div>

<div class="3u 12u$(xsmall) col-3 col-12-small">
	<label>{{ 'entity.user.tel'|trans }}*</label>
</div>
<div class="9u$ 12u$(xsmall)">
	{{ form_widget(form.tel, {'attr': { 'placeholder':'例) 000-000-000' }}) }}
